<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  android:title="@string/binary_gadget">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="binary_show_alarm"
        android:title="@string/show_alarm_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="binary_show_date"
        android:title="@string/show_date_title" />

    <org.omnirom.deskclock.preference.ColorPickerPreference
        android:key="binary_clock_color"
        android:title="@string/clock_color_title" />

    <org.omnirom.deskclock.preference.FontPreference
        android:key="binary_clock_font"
        android:title="@string/clock_font_title" />

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="binary_clock_shadow"
        android:title="@string/clock_shadow_title" />

    <Preference
        android:persistent="false"
        android:widgetLayout="@layout/preference_button"/>

</PreferenceScreen>
